@page
@model IndexModel
@{
    ViewData["Title"] = "Krzysztof Krysiński";
}

    <div id="aboutMe">
        <div class="contentBlock">
            <h1>
                <span style="color: #00FF2A">></span><span id="typeWriteHeader"> Hi, I'm Krzysztof</span><span class="blink">|</span>
            </h1>

            <div class="card" style="background-color: transparent; line-height: 45px; font-weight: lighter;">
                I'm a @Model.Age year old software developer.<br /><br />
                My main fields are <span style="color: #A1E727;">desktop</span>, <span style="color: #A1E727;">game</span>
                and <span style="color: #A1E727;">mobile</span> development. <br />
                I am <span style="color: #A1E727;">Google Code-In</span> <span style="color: #A1E727;">2018</span>
                finalist,
                <span style="color: #A1E727;">Google Code-In 2019</span> Runner up<br />
                and winner of few local contests.<br /><br />
                <span class="underlinedText" style="border-color: #9D6ED8;">C#</span> and 
                <span class="underlinedText" style="border-color: #189F20;">.NET</span> are my primary technologies.<br /><br />
                I love books, music and archery.
            </div>
        </div>
        <div class="contentBlock" id="meAndLinksContentBlock">
            <div id="meAndLinks">
                <div id="me">
                    <img src="~/images/me6.jpg"/>
                </div>
                <br />
                <div id="links">
                    <a href="https://github.com/flabbet" target="_blank">
                        <div class="link">
                            <img src="~/images/GitHub-Mark.png" />
                            <span>Github</span>
                        </div>
                    </a>
                    <a href="https://twitter.com/flabbet" target="_blank">
                        <div class="link">
                            <img src="~/images/Twitter_Logo_Blue.png" />
                            <span>Twitter</span>
                        </div>
                    </a>
                    <a href="https://stackoverflow.com/users/9146296/flabbet" target="_blank">
                        <div class="link">
                            <img src="~/images/so-icon.png" />
                            <span>Stack Overflow</span>
                        </div>
                    </a>
                </div>
            </div>
            <div id="contactMe">
                Contact me at <br /> <span style="color:white;">krysinskikrzysztof123@gmail.com</span>
            </div>
        </div>
        <div style="clear:both;"></div>
    </div>
<div id="projects">
    <div class="titleText">
        <span>My projects</span>
    </div>
    @foreach (var project in Model.Projects)
    {
        <div class="card withWidth">
            <div class="project-card">
                <a href="@project.ProjectUrl" target="_blank">
                    @project.ProjectName
                </a>

                <div class="project-card-body">
                    @project.Description
                    <div class="project-card-technologies">
                        @foreach (var tech in project.Technologies)
                        {
                            <div class="project-card-technology" style="color: @tech.FontColor; background-color: @tech.Color">
                                @tech.Name
                            </div>
                        }
                        <br />
                        <div class="project-lang">
                            <span class="dot" style="background-color: @project.LanguageColor"></span>
                            <span>@project.Language</span>
                        </div>
                        <a href="@project.ProjectUrl" target="_blank">
                            <div class="project-link">
                                <img src="~/images/@project.Image" />
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    <div id="moreInfo">
        Check out more on <a href="https://github.com/flabbet" target="_blank">GitHub <img src="~/images/GitHub-Mark.png" /></a>
    </div>
</div>