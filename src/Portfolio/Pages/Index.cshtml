            </pre>
        </div>
    </div>
    <div style="clear:both;"></div>
</div>
<div id="projects">
    <div class="titleText">
        <span>My projects</span>
    </div>
    @foreach (var project in Model.Projects)
    {
        <div class="card" style="width: 400px; display: inline-block;">
            <div class="project-card" onclick="enablePlayer();">
                <a href="@project.ProjectUrl" target="_blank">
                    @project.ProjectName
                </a>

                <div class="project-card-body">
                    @project.Description
                    <div class="project-card-technologies">
                        @foreach (var tech in project.Technologies)
                        {
                            <div class="project-card-technology" style="color: @tech.FontColor; background-color: @tech.Color">
                                @tech.Name
                            </div>
                        }
                        <br />
                        <div class="project-lang">
                            <span class="dot" style="background-color: @project.LanguageColor"></span>
                            <span>@project.Language</span>
                        </div>
                        <a href="@project.ProjectUrl" target="_blank">
                            <div class="project-link">
                                <img src="~/images/@project.Image" />
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div id="wipProjects">
    <span class="titleText">Projects I am working on</span>

</div>

