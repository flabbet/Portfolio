    <div class="contentBlock">
        <div class="card">
            <pre class="prettyprint">
class Portfolio
{
    var name = "Krzysztof Krysiński";
    var age = @Model.Age;
    var nationality = "Polish";
                        
    var github = "<a href="https://github.com/flabbet" target="_blank">flabbet</a>";
    var linkedIn = "<a href="https://www.linkedin.com/in/krzysztof-krysinski-dev/" target="_blank">krzysztof-krysinski-dev</a>";
